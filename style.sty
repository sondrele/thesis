% Styles
\newcommand{\lang}[1]{\texttt{#1}}    % Programming Languages: \lang{C}
\newcommand{\lib}[1]{\texttt{#1}}     % Software Library: \lib{cmsis}

\newcommand{\keyword}[1]{\texttt{#1}} % Language keyword: \keyword{if}
\newcommand{\code}[1]{\texttt{#1}}    % Inline code: \code{let a = 2;}
\newcommand{\func}[1]{\texttt{#1}}    % Function name: \func{main}
\newcommand{\attrib}[1]{\texttt{#1}}  % Rust Attribute: \attrib{\#[repr(C)]}
\newcommand{\var}[1]{\texttt{#1}}     % Variable \var{i}

\newcommand{\concept}[1]{\textit{#1}} % General Concept: \concept{Ownership}
\newcommand{\elfsec}[1]{\textbf{#1}}  % Elf file section: \elfsec{.text}

\newcommand{\cmd}[1]{\texttt{#1}}     % Cli command: \cmd{git}
\newcommand{\flag}[1]{\texttt{#1}}    % Cli command flag: \flag{-g}

\newcommand{\prog}[1]{\texttt{#1}}    % Program: \prog{rustc}
\newcommand{\file}[1]{\texttt{#1}}    % File: \file{main.rs}
\newcommand{\dir}[1]{\texttt{#1}}     % Directory: \dir{src/bin}
\newcommand{\format}[1]{\texttt{#1}}  % File format: \format{*.rs}

\newcommand{\chip}[1]{\texttt{#1}}    % Hardware Chip: \chip{Gecko}
\newcommand{\mem}[1]{\texttt{#1}}     % Memory address: \mem{0x40002000}

\newcommand{\appnote}[1]{\textbf{#1}} % Application Note: \appnote{AN0001}


